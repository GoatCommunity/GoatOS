Global {
    edge=bottom
    alligns=expand
    margin=0
    widthtype=percent
    width=100
    height=28
    transparent=0
    tintcolor=#111111
    alpha=255
    setdocktype=1
    setpartialstrut=1
    usefontcolor=1
    fontcolor=#ffffff
    background=1
    backgroundfile=/usr/share/pixmaps/panel-bg.png
    iconsize=24

    Logout=lxsession-logout
}

Plugin {
    type = menu
    Config {
        image=/usr/share/pixmaps/menu-icon.png
        system {
        }
        separator {
        }
        item {
            command=run
        }
        separator {
        }
        item {
            image=gnome-logout
            command=lxsession-logout
        }
    }
}

Plugin {
    type = launchbar
    Config {
        Button {
            id=/usr/share/applications/lxterminal.desktop
        }
        Button {
            id=/usr/share/applications/firefox-esr.desktop
        }
        Button {
            id=/usr/share/applications/pcmanfm.desktop
        }
    }
}

Plugin {
    type = taskbar
    expand=1
    Config {
        tooltips=1
        IconsOnly=1          
        ShowAllDesks=0
        UseMouseWheel=1
        UseUrgencyHint=1
        FlatButton=1
        MaxTaskWidth=150
        spacing=1
        GroupedTasks=0
    }
}

Plugin {
    type = cpu
    Config {
        ShowPercent=1
        Color=#00FF00
    }
}

Plugin {
    type = tray
}

Plugin {
    type = dclock
    Config {
        ClockFmt=%R
        TooltipFmt=%A %x
        BoldFont=0
        IconOnly=0
        CenterText=0
    }
}
